---
// MetricCards.astro
const metrics = [
  {
    value: "95",
    unit: "%",
    description: "Enterprise-grade reliability ensuring uninterrupted service.",
  },
  {
    value: "45",
    unit: "min",
    description: "Fast implementation and seamless integration for teams.",
  },
  {
    value: "85",
    unit: "%",
    description: "Measurable ROI with improved operational performance.",
  },
  {
    value: "72",
    unit: "%",
    description: "Strong client loyalty backed by proven results.",
  },
];
---

<div class="container">
  <div
    class="bg-gradient-to-r from-blue-300 to-purple-200 p-[30px] lg:p-[70px] rounded-3xl"
  >
    <div class="grid grid-cols-1 rounded-2xl bg-white md:grid-cols-2 p-[30px] lg:grid-cols-4 gap-6">
      {
        metrics.map((metric) => (
          <div class="  lg:p-6  transition-shadow">
            <div class="flex items-baseline gap-2 sm:mb-4 mb-2">
              <span class="text-[45px] poppins-medium text-slate-900">
                {metric.value} <span class="text-[25px] poppins-medium text-slate-900">  {metric.unit}</span>
              </span>

    
             
            </div>
            <p class="text-title  text-sm poppins-light leading-relaxed">
              {metric.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</div>
<style>
  /* Optional: Add custom styles if needed */
</style>
