---
import { Image } from "astro:assets";
import Button from "./ui/Button.astro";
import cash_flow from "../assets/cash-flow.webp";
import TrusedUsers from "./TrustedUsers.astro";
import NameStar from "./ui/NameStar.astro";

interface HeroSectionProps {
  subtitle: string;
  title: string;
  emailLabel: {
    textEmail: string;
    color: string;
  };
  email: string;
  imageSrc: string;
  imageAlt: string;
  buttonHref?: string;
  sectionBg?: string;
  text?: string;
  home?: boolean;
}

const {
  subtitle,
  title,

  imageAlt,
  sectionBg,
  text = "",

  classH2,
} = Astro.props;
---

<section class={sectionBg}>
  <div
    class="container grid-cols-1 py-[20px] sm:px-5 px-2 mx-auto max-w-screen-xl md:grid-cols-2 gap-x-8 grid items-center"
  >
    <div
      class="col-span-1 flex sm:px-[0] px-[10px] flex-col custom-row-gap gap-y-[30px] md:mb-0 md:pr-10 text-center md:text-left"
    >
      <h1
        class="border border-primary rounded-full px-4 py-2 max-w-max md:text-[16px] flex items-center gap-2 text-[14px] md:mx-0 mx-auto poppins-regular text-primary tracking-[-0.5px]"
      >
        <NameStar name={subtitle} />
      </h1>

      <h2 class=`title-hero-section ${classH2}`>
        {title}
      </h2>

      {
        text && (
          <p
            class="paragraph"
            style="margin-bottom:0 !important"
            set:html={text}
          />
        )
      }

       <div class="items-center justify-center lg:justify-start justify-between mb-[30px] flex gap-2 sm:gap-4 ">
          <Button href="#" name="Book a Demo" class="py-3 px-0  sm:px-5" showArrow variant="dark" />
          <Button href="#" name="Learn More" showArrow class="py-3 px-0 sm:px-5" variant="light" />
      </div>
      <TrusedUsers />
     <div>

     </div>
    </div>

    <div class="col-span-1 flex z-10 justify-center">
      <div class="relative w-full">
        <div class="relative w-full flex justify-end  sm:pl-[30px]" >
          <Image
            src={cash_flow}
            alt={"imageAlt"}
            width={330}
            height={217}
            class="w-full h-full rounded-[20px] ml-auto lg:scale-95"
            loading="eager"
            decoding="async"
            fetchpriority={"high"}
          />
        </div>
      </div>
    </div>
  </div>
</section>
